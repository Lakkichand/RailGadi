<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/fifty_six"
        android:background="@color/colorPrimary"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/close_irctc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/twenty"
            android:text="X"
            android:textColor="@color/white"
            android:textSize="@dimen/other_big" />

        <TextView
            android:id="@+id/irctc_title"
            android:layout_width="@dimen/zero"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/other_medium"
            android:layout_weight="1"
            android:text="@string/irctc_booking_cancellation"
            android:textColor="@color/white"
            android:textSize="@dimen/twenty" />

    </LinearLayout>

    <WebView
        android:id="@+id/irctc_web_view"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" />


</LinearLayout>