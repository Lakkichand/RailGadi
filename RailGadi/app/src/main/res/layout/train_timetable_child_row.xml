<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="@dimen/five"
        android:gravity="top|center"
        android:paddingTop="@dimen/five">


        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="@dimen/zero"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/time_table_station_code"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:singleLine="true"
                    android:text="LRJ"
                    android:textSize="@dimen/home_medium"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/time_table_station"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/home_small"
                    android:gravity="center"
                    android:singleLine="true"
                    android:text="LAKSHAR"
                    android:textColor="@color/black"/>

            </LinearLayout>

            <TextView
                android:id="@+id/time_table_arrival"
                android:layout_width="@dimen/zero"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:singleLine="true"
                android:text="13:45"
                android:textSize="@dimen/home_medium"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/time_table_departure"
                android:layout_width="@dimen/zero"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="@dimen/home_medium"
                android:text="13:45"
                android:singleLine="true"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/time_table_adt"
                android:layout_width="@dimen/zero"
                android:layout_height="wrap_content"
                android:textSize="@dimen/home_medium"
                android:layout_weight="1"
                android:gravity="center"
                android:text="-"
                android:singleLine="true"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/time_table_distance"
                android:layout_width="@dimen/zero"
                android:layout_height="wrap_content"
                android:textSize="@dimen/home_medium"
                android:layout_weight="1"
                android:gravity="center"
                android:singleLine="true"
                android:text="1682 km"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/time_table_platform"
                android:layout_width="@dimen/zero"
                android:layout_height="wrap_content"
                android:textSize="@dimen/home_medium"
                android:layout_weight="1"
                android:gravity="center"
                android:singleLine="true"
                android:text="-"
                android:textColor="@color/black" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/disclaimer_historical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/five"
            android:paddingBottom="@dimen/five"
            android:orientation="vertical">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/disclaimer"
                android:textColor="@color/colorPrimary"/>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="@dimen/home_medium"
                android:text="@string/historical_data"
                android:textColor="@color/colorPrimary" />

        </LinearLayout>

    </LinearLayout>


</LinearLayout>