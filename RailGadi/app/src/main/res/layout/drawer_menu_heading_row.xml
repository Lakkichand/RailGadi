    android:paddingBottom="@dimen/ten"
    android:paddingTop="@dimen/ten">


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <ImageView
            android:id="@+id/drawer_group_icon"
            android:layout_width="@dimen/twenty"
            android:layout_height="@dimen/twenty"
            android:layout_marginLeft="@dimen/sixteen"
            android:layerType="software"
            android:src="@drawable/ic_launcher" />

        <TextView
            android:id="@+id/drawer_group_text"
            android:layout_width="@dimen/zero"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/twenty_four"
            android:layout_weight="1"
            android:text="Home"
            android:textColor="@color/default_textview_color"
            android:textSize="@dimen/sixteen" />

        <ImageView
            android:id="@+id/drawer_group_indicator"
            android:layout_width="@dimen/nine"
            android:layout_height="@dimen/nine"
            android:layout_marginRight="@dimen/ten" />

    </LinearLayout>


