<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <EditText
        android:id="@+id/forgot_enter_email"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/ten"
        android:layout_margin="@dimen/ten"
        android:hint="@string/enter_registered_email"
        android:gravity="center"
        android:singleLine="true" />

    <TextView
        android:id="@+id/forgot_done"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/home_big"
        android:layout_margin="@dimen/ten"
        android:textColor="@color/white"
        android:background="@drawable/find_train_button_selector"
        android:gravity="center"
        android:textSize="@dimen/home_big"
        android:text="@string/ok"/>

</LinearLayout>