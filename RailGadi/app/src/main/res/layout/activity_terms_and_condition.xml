<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.railgadi.activities.TermsAndConditionActivity">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/fifty_six"
        android:background="@color/colorPrimary"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/close_t_and_c"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/twenty"
            android:text="X"
            android:textColor="@color/white"
            android:textSize="@dimen/other_big" />

        <TextView
            android:id="@+id/t_and_c_title"
            android:layout_width="@dimen/zero"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/other_medium"
            android:layout_weight="1"
            android:text="List Title"
            android:textColor="@color/white"
            android:textSize="@dimen/twenty" />

    </LinearLayout>

    <WebView
        android:id="@+id/t_and_c_web"
        android:layout_weight="1"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/zero" />

</LinearLayout>
