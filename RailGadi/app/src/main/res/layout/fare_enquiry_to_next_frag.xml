<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent_two"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@drawable/find_train_background"
        android:orientation="vertical"
        android:layout_margin="@dimen/five"
        android:paddingTop="@dimen/five"
        android:paddingBottom="@dimen/home_small"
        android:paddingRight="@dimen/home_small"
        android:paddingLeft="@dimen/home_small">

        <LinearLayout
            android:id="@+id/super_layout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="@dimen/zero"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/train_name_and_number"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/two"
                        android:layout_marginTop="@dimen/two"
                        android:singleLine="true"
                        android:text="Train Name and number"
                        android:textColor="@color/black"
                        android:textSize="@dimen/fifteen" />

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/two"
                        android:layout_marginTop="@dimen/two"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/via_station_code"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:singleLine="true"
                            android:text="Ahmedabad"
                            android:textColor="@color/light_gray"
                            android:textSize="@dimen/ten" />

                        <ImageView
                            android:id="@+id/mid_arrow_trainlist"
                            android:layout_width="@dimen/twenty"
                            android:layout_height="@dimen/ten"
                            android:layout_marginLeft="@dimen/five"
                            android:layout_marginRight="@dimen/five"
                            android:alpha="145"
                            android:src="@drawable/shape_black_arrow" />

                        <TextView
                            android:id="@+id/to_station_code"
                            android:layout_width="@dimen/zero"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:singleLine="true"
                            android:text="Mumbai Central"
                            android:textColor="@color/light_gray"
                            android:textSize="@dimen/ten" />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/arr_dep_travel_time"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/two"
                        android:layout_marginTop="@dimen/two"
                        android:singleLine="true"
                        android:text="03:50 - 22:00 ( 12 hr 39 m )"
                        android:textColor="@color/light_gray"
                        android:textSize="@dimen/ten" />

                    <LinearLayout
                        android:id="@+id/running_days"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/two"
                        android:layout_marginTop="@dimen/two"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/sun"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/three"
                            android:text="S"
                            android:textColor="@color/light_gray"
                            android:textSize="@dimen/ten" />

                        <TextView
                            android:id="@+id/mon"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/three"
                            android:text="M"
                            android:textColor="@color/light_gray"
                            android:textSize="@dimen/ten" />

                        <TextView
                            android:id="@+id/tue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/three"
                            android:text="T"
                            android:textColor="@color/light_gray"
                            android:textSize="@dimen/ten" />

                        <TextView
                            android:id="@+id/wed"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/three"
                            android:text="W"
                            android:textColor="@color/light_gray"
                            android:textSize="@dimen/ten" />

                        <TextView
                            android:id="@+id/thu"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/three"
                            android:text="T"
                            android:textColor="@color/light_gray"
                            android:textSize="@dimen/ten" />

                        <TextView
                            android:id="@+id/fri"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/three"
                            android:text="F"
                            android:textColor="@color/light_gray"
                            android:textSize="@dimen/ten" />

                        <TextView
                            android:id="@+id/sat"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/three"
                            android:text="S"
                            android:textColor="@color/light_gray"
                            android:textSize="@dimen/ten" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="@dimen/zero"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:gravity="right"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/train_type"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:singleLine="true"
                    android:text="DURANTO"
                    android:visibility="gone"
                    android:textColor="@color/colorPrimary" />

            </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:id="@+id/hidden_station_layout"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/zero"
            android:layout_weight="1"
            android:clickable="true"
            android:orientation="vertical"
            android:visibility="visible">

            <TextView
                android:id="@+id/total_fare_textview"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="total fare"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/twenty" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/select_class_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Select Class"
                    android:textSize="@dimen/ten" />

                <HorizontalScrollView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:id="@+id/class_list_layout"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                    </LinearLayout>

                </HorizontalScrollView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="@dimen/zero"
                android:layout_marginTop="@dimen/ten"
                android:layout_weight="1"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="@dimen/zero"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginTop="@dimen/five"
                        android:layout_marginBottom="@dimen/five"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/normal_textview"
                            android:layout_height="wrap_content"
                            android:layout_width="fill_parent"
                            android:textSize="@dimen/fifteen"
                            android:gravity="center"
                            android:textColor="@color/colorPrimary"
                            android:text="@string/normal"/>

                        <View
                            android:id="@+id/normal_line"
                            android:layout_width="fill_parent"
                            android:layout_height="@dimen/two"
                            android:background="@color/light_gray" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="@dimen/zero"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/five"
                        android:layout_marginBottom="@dimen/five"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tatkal_textview"
                            android:layout_height="wrap_content"
                            android:layout_width="fill_parent"
                            android:textSize="@dimen/fifteen"
                            android:gravity="center"
                            android:textColor="@color/light_gray"
                            android:text="@string/tatkal"/>

                        <View
                            android:id="@+id/tatkal_line"
                            android:visibility="gone"
                            android:layout_width="fill_parent"
                            android:layout_height="@dimen/two"
                            android:background="@color/light_gray" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="@dimen/zero"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/five"
                        android:layout_marginBottom="@dimen/five"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/pre_tatkal_textview"
                            android:layout_height="wrap_content"
                            android:layout_width="fill_parent"
                            android:textSize="@dimen/fifteen"
                            android:gravity="center"
                            android:textColor="@color/light_gray"
                            android:text="@string/pre_tatkal"/>

                        <View
                            android:id="@+id/pre_tatkal_line"
                            android:visibility="gone"
                            android:layout_width="fill_parent"
                            android:layout_height="@dimen/two"
                            android:background="@color/light_gray" />

                    </LinearLayout>

                </LinearLayout>

                <ListView
                    android:id="@+id/fare_enquiry_details_listview"
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/zero"
                    android:layout_margin="@dimen/three"
                    android:layout_weight="1" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>