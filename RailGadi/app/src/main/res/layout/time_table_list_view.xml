                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/three"
                            android:text=""
                            android:textSize="@dimen/home_medium" />

                        <TextView
                            android:id="@+id/tue_timetable"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/three"
                            android:text=""
                            android:textSize="@dimen/home_medium" />

                        <TextView
                            android:id="@+id/wed_timetable"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/three"
                            android:text=""
                            android:textSize="@dimen/home_medium" />

                        <TextView
                            android:id="@+id/thu_timetable"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/three"
                            android:text=""
                            android:textSize="@dimen/home_medium" />

                        <TextView
                            android:id="@+id/fri_timetable"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/three"
                            android:text=""
                            android:textSize="@dimen/home_medium" />

                        <TextView
                            android:id="@+id/sat_timetable"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textSize="@dimen/home_medium" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center">

                <TextView
                    android:id="@+id/time_table_time_distance_stop"
                    android:layout_width="@dimen/zero"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text=""
                    android:textSize="@dimen/home_medium" />

                <TextView
                    android:id="@+id/time_table_pantry_image"
                    android:layout_width="@dimen/twenty"
                    android:layout_height="@dimen/twenty"
                    android:gravity="center"
                    android:text=""
                    android:textSize="@dimen/twenty" />

                <TextView
                    android:id="@+id/time_table_catering"
                    android:layout_width="@dimen/other_big"
                    android:layout_height="@dimen/twenty"
                    android:layout_marginLeft="@dimen/five"
                    android:gravity="center"
                    android:text=""
                    android:textSize="@dimen/twenty" />

            </LinearLayout>

        </LinearLayout>

